MDScreen:
    screen_man : screen_man
    nav_drawer: nav_drawer
    MDNavigationLayout:
        MDScreenManager:
            id: screen_man
            MDScreen:
                name: "screen1"
                minimum_size: (600, 400)

                MDFloatLayout:
                    orientation: 'vertical'

                    MDLabel:
                        text: "ВХОД"
                        halign: 'center'
                        size_hint_x: .3
                        pos_hint: {"center_x": 0.5, "center_y": 0.8}
                    MDTextField:
                        hint_text: "Введите логин"
                        size_hint: .9, .1
                        mode: "rectangle"
                        pos_hint: {"center_x": 0.5, "center_y": 0.6}
                    MDTextField:
                        id: password
                        hint_text: "Введите пароль"
                        size_hint: .9, .1
                        mode: "rectangle"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    MDRaisedButton:
                        text: "зарегистрироваться"
                        pos_hint: {"center_x": 0.5, "center_y": 0.3}
                        on_release: app.registration()

                    MDRaisedButton:
                        text: "войти"
                        pos_hint: {"center_x": 0.5, "center_y": 0.2}
                        on_release: app.sin_login()

            MDScreen:
                name: "screen2"
                id: f2
                MDFloatLayout:
                    orientation: 'vertical'

                MDLabel:
                    text: "Список"
                    halign: 'center'
                    size_hint_x: .3
                    pos_hint: {"center_x": 0.5, "center_y": 0.9}
                MDRaisedButton:
                    text: "навигация"
                    pos_hint: {"center_x": 0.5, "center_y": 0.2}
                    on_release: nav_drawer.set_state("open")

                MDRaisedButton:
                    text: "выйти из аккаунта"
                    pos_hint: {"center_x": 0.5, "center_y": 0.1}
                    on_release: app.back('screen1')


            MDScreen:
                name: "screen3"
                id: f3
                MDFloatLayout:
                    orientation: 'vertical'

                    MDLabel:
                        text: "РЕГИСТРАЦИЯ"
                        halign: 'center'
                        size_hint_x: .3
                        pos_hint: {"center_x": 0.5, "center_y": 0.8}
                    MDTextField:
                        hint_text: "Введите логин"
                        size_hint: .9, .1
                        mode: "rectangle"
                        pos_hint: {"center_x": 0.5, "center_y": 0.6}
                    MDTextField:
                        id: password
                        hint_text: "Введите пароль"
                        size_hint: .9, .1
                        mode: "rectangle"
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    MDTextField:
                        id: password
                        hint_text: "Введите электронную почту"
                        size_hint: .9, .1
                        mode: "rectangle"
                        pos_hint: {"center_x": 0.5, "center_y": 0.4}

                    MDRaisedButton:
                        text: "зарегистрироваться"
                        pos_hint: {"center_x": 0.5, "center_y": 0.3}
                        on_release: app.rega()

                    MDRaisedButton:
                        text: "назад"
                        pos_hint: {"center_x": 0.5, "center_y": 0.2}
                        on_release: app.back("screen1")

            MDScreen:
                name: "screen4"
                id: f4
                MDFloatLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: "Выберете товар для заказа"
                        halign: 'center'
                        size_hint_y: .3
                        pos_hint: {"center_x": 0.5, "center_y": 0.8}

                    MDRaisedButton:
                        text: "букеты"
                        pos_hint: {"center_x": 0.5, "center_y": 0.2}

                    MDRaisedButton:
                        text: "наборы"
                        pos_hint: {"center_x": 0.5, "center_y": 0.2}





            MDScreen:
                name: "screen5"
                id: f5
                MDFloatLayout:
                    orientation: 'vertical'
                MDLabel:
                    text: "gjdfjfhj"
                    halign: 'center'
                    size_hint_x: .3
                    pos_hint: {"center_x": 0.5, "center_y": 0.8}


        MDNavigationDrawer:
            id: nav_drawer
            anchor: "left"
            ContentNavigationDrawer:
                screen_manager: screen_man
                nav_drawer: nav_drawer